<!DOCTYPE html>
<html lang="ru">
  <!-- @import "head.html" -->
  <body>
    <div class="wrapper">
      <!-- @import "header.html" -->
      <main class="page">
        <!-- for preloader -->
        <div class="preloader">
          <div class="preloader__row">
            <img src="img/preloader.svg" alt="" />
          </div>
        </div>
        <section class="form">
          <div class="form__container _container">
            <div class="form__body">
              <div class="form__image form__image_auth">
                <img src="img/auth-reg/01.jpg" alt="" />
              </div>
              <div class="form__fight-form right-form">
                <h1 class="right-form__title">Авторизация</h1>
                <form action="" class="right-form__form">
                  <div class="right-form__item">
                    <label for="login" class="right-form__label">Логин:</label>
                    <input id="login" type="text" class="right-form__inp" />
                  </div>
                  <div class="right-form__item">
                    <label for="password" class="right-form__label"
                      >Пароль:</label
                    >
                    <input
                      id="password"
                      type="password"
                      class="right-form__inp"
                    />
                  </div>
                  <button class="right-form__btn" type="submit">Войти</button>
                </form>
                <div class="right-form__bottom-info">
                  <div class="right-form__quest">
                    Нет аккаунта?
                    <a href="registration-page.html">Зарегистрироваться!</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </main>
      <!-- @import "footer.html" -->
    </div>
  </body>
  <script src="js/script.js"></script>
</html>
