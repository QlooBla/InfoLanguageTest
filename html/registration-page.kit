<!DOCTYPE html>
<html lang="ru">
  <!-- @import "head.html" -->
  <body>
    <div class="wrapper">
      <!-- @import "header.html" -->
      <main class="page">
        <!-- for preloader -->
        <div class="preloader">
          <div class="preloader__row">
            <img src="img/preloader.svg" alt="" />
          </div>
        </div>
        <!-- Form registr -->

        <section class="form">
          <div class="form__container _container">
            <div class="form__body">
              <div class="form__image">
                <img src="img/auth-reg/01.jpg" alt="" />
              </div>
              <div class="form__fight-form right-form">
                <h1 class="right-form__title">Регистрация</h1>
                <form action="" class="right-form__form">
                  <div class="right-form__item">
                    <label for="name" class="right-form__label"
                      >Ваше имя:</label
                    >
                    <input
                      placeholder="Иван"
                      id="name"
                      type="text"
                      class="right-form__inp"
                    />
                  </div>
                  <div class="right-form__item">
                    <label for="surname" class="right-form__label"
                      >Ваша фамилия:</label
                    >
                    <input
                      placeholder="Иванович"
                      id="surname"
                      type="text"
                      class="right-form__inp"
                    />
                  </div>
                  <div class="right-form__item">
                    <label for="phone" class="right-form__label"
                      >Ваш номер телефона:</label
                    >
                    <input
                      placeholder="+8(000)000-00-00"
                      id="phone"
                      type="tel"
                      class="right-form__inp"
                    />
                  </div>
                  <div class="right-form__item">
                    <label for="login" class="right-form__label"
                      >Придумайте логин:</label
                    >
                    <input id="login" type="text" class="right-form__inp" />
                  </div>
                  <div class="right-form__item">
                    <label for="password" class="right-form__label"
                      >Придумайте пароль:</label
                    >
                    <input
                      id="password"
                      type="password"
                      class="right-form__inp"
                    />
                  </div>
                  <div class="right-form__item">
                    <label for="password-confirm" class="right-form__label"
                      >Подтвердите пароль:</label
                    >
                    <input
                      id="password-confirm"
                      type="password"
                      class="right-form__inp"
                    />
                  </div>
                  <button class="right-form__btn" type="submit">
                    Зарегистрироваться
                  </button>
                </form>
                <div class="right-form__bottom-info">
                  <div class="right-form__quest">
                    Уже есть аккаунт? <a href="auth-page.html">Войти!</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </main>
      <!-- @import "footer.html" -->
    </div>
  </body>
  <script src="js/script.js"></script>
</html>
